{ pkgs, ... }:
{
  sound.enable = true;
  
  services.pulseaudio.enable = false;
  
  services.pipewire = {
    enable = true;
    alsa.enable = true;
    alsa.support32Bit = true;
    pulse.enable = true;
    # lowLatency.enable = true;
  };
  
  hardware.alsa.enablePersistence = true;

  environment.systemPackages = with pkgs; [ 
    playerctl
    # TODO: move this
    imagemagick 
  ];
}
